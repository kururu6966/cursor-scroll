{
  "name": "cursor-scroll",
  "displayName": "Cursor Scroll",
  "description": "Vim-like scroll position commands (zz/zt/zb) - scroll cursor line to center, top, or bottom",
  "version": "0.1.0",
  "publisher": "kururu6966",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kururu6966/vscode-cursor-scroll"
  },
  "keywords": [
    "vim",
    "helix",
    "scroll",
    "cursor",
    "center",
    "zz",
    "zt",
    "zb"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Keymaps"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scroll-position.center",
        "title": "Scroll: Center Cursor Line"
      },
      {
        "command": "scroll-position.top",
        "title": "Scroll: Top Cursor Line"
      },
      {
        "command": "scroll-position.bottom",
        "title": "Scroll: Bottom Cursor Line"
      }
    ],
    "keybindings": [
      {
        "command": "scroll-position.center",
        "key": "ctrl+l",
        "mac": "ctrl+l",
        "when": "editorTextFocus"
      },
      {
        "command": "scroll-position.top",
        "key": "ctrl+shift+l",
        "mac": "ctrl+shift+l",
        "when": "editorTextFocus"
      },
      {
        "command": "scroll-position.bottom",
        "key": "ctrl+alt+l",
        "mac": "ctrl+alt+l",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "oxlint src",
    "format": "oxlint --fix src"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "oxlint": "^0.13.0",
    "typescript": "^4.9.3"
  }
}
